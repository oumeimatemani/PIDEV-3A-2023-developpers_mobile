            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                <form>

                    <div class="row mb-3">
                        <div class="col">
                            {{ form_label(form.idCategorie, 'Categorie', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.idCategorie, {'attr': {'class': 'form-control'}}) }}
                            {% if form_errors(form.idCategorie) is not empty %}
                                <div class="alert text-danger">
                                    {{ form_errors(form.idCategorie) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.poids, 'Poids', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.poids, {'attr': {'class': 'form-control'}}) }}
                        {% if form_errors(form.poids) is not empty %}
                            <div class="alert text-danger">
                                {{ form_errors(form.poids) }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.descriptionD, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.descriptionD, {'attr': {'class': 'form-control'}}) }}
                        {% if form_errors(form.descriptionD) is not empty %}
                            <div class="alert text-danger">
                                {{ form_errors(form.descriptionD) }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.date, 'date', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                        {% if form_errors(form.date) is not empty %}
                            <div class="alert text-danger">
                                {{ form_errors(form.date) }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="row mb-3">
                        <div class="col">
                            {{ form_label(form.etat, 'Disponibilit√©', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.etat, {'attr': {'class': 'form-control'}}) }}
                            {% if form_errors(form.etat) is not empty %}
                                <div class="alert text-danger">
                                    {{ form_errors(form.etat) }}
                                </div>
                            {% endif %}
                        </div>

                    </div>

                    {{ form_rest(form) }}

                    <div class="text-end mt-4">
                        <button type="submit" class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
                    </div>
                </form>
                {{ form_end(form) }}
            </div>