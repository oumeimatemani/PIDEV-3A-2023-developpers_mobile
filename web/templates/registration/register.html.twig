{% extends 'baseFront.html.twig' %}
{% block head %}
  <!-- other head elements... -->
  <script src="https://www.google.com/recaptcha/api.js" async defer></script>
{% endblock %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container" style="width:40%; ">
    <h1 style="text-align:center;color:brown;">Inscription </h1>

        {{ form_start(registrationForm, {attr : {'novalidate':'novalidate '}}) }}
        <fieldset>
        
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, { label: 'Mot De Passe' },{attr :{'class':'form-control'}}) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.cin,{label:'Numéro Carte D\'identité'}) }}
        {{ form_row(registrationForm.datenaissance,{label:'Date de naissance'}) }}
       
        {{ form_row(registrationForm.region) }}
        {{ form_row(registrationForm.ville) }}
        {{ form_row(registrationForm.adresse) }}
    
        {{ form_row(registrationForm.agreeTerms,{label:'accepter les regles de ce site'}) }}

       <button type="submit"  class="btn btn-outline-success" style="width:40%;"> S'inscrire </button>
       
    {{ form_end(registrationForm) }}

      <div class="col-12">
                      <p class="small mb-0 my-3"> Vous avez deja un compte ? <a href="{{ path ('app_login')}}" > Me Connecter </a></p>
                    </div>
    </div>

   
{% endblock %}
