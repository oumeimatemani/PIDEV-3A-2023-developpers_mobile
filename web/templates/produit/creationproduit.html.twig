{% extends 'base.html.twig' %}
{% block title %}ajouter produits{% endblock %}

{% block body %}
    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Formualire Ajout Produit</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Forms</li>
                    <li class="breadcrumb-item active">Produits</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-6">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Ajouter Produit</h5>
                            {% for flash_message in app.flashes('success') %}
                                <div class="alert alert-success">{{ flash_message }}</div>
                            {% endfor %}
                            <!-- General Form Elements -->
                            {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-4 col-form-label">Nom </label>
                                <div class="col-sm-10">
                                    {{ form_widget(f.nomP,{'attr':{'class':'form-control'}}) }}
                                </div>
                                {% if form_errors(f.nomP) %}
                                    <div class="alert alert-danger">
                                        {{ form_errors(f.nomP) }}
                                    </div>
                                {% endif %}
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-4 col-form-label">Prix </label>
                                <div class="col-sm-10">
                                    {{ form_widget(f.prixP,{'attr':{'class':'form-control'}}) }}
                                </div>
                                {% if form_errors(f.prixP) %}
                                    <div class="alert alert-danger">
                                        {{ form_errors(f.prixP) }}
                                    </div>
                                {% endif %}
                            </div>
                            <div class="row mb-3">
                                <label for="inputPassword" class="col-sm-4 col-form-label">Description</label>
                                <div class="col-sm-10">
                                    {{ form_widget(f.descriptionP,{'attr':{'class':'form-control'}}) }}
                                </div>
                                {% if form_errors(f.descriptionP) %}
                                    <div class="alert alert-danger">
                                        {{ form_errors(f.descriptionP) }}
                                    </div>
                                {% endif %}
                            </div>


                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-4 col-form-label">stock</label>
                                <div class="col-sm-10">
                                    {{ form_widget(f.stock,{'attr':{'class':'form-control'}}) }}
                                </div>
                                {% if form_errors(f.stock) %}
                                    <div class="alert alert-danger">
                                        {{ form_errors(f.stock) }}
                                    </div>
                                {% endif %}
                            </div>
                            <div class="form-group">

                                <label for="nom">Categorie</label>

                                {{ form_widget(f.idcatP, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(f.idcatP, {'attr': {'class': 'text-danger'}}) }}

                            </div>

                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-4 col-form-label">File Upload</label>
                                <div class="col-sm-10">
                                    {{ form_widget(f.imageP,{'attr':{'class':'form-control'}}) }}

                                </div>
                            </div>





                            <div class="row mb-3">
                                <div class="col-sm-10">
                                    <button type="submit" class="col-sm-4 btn btn-primary">Ajouter </button>
                                </div>
                            </div>
                            {{ form_end(f) }}

                        </div>
                    </div>
                </div>

            </div>


            </div>
        </section>

    </main>

{% endblock %}