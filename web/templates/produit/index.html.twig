{% extends 'base.html.twig' %}

{% block title %}liste des produits {% endblock %}

{% block body %}

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Les produits</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Tables</li>
                    <li class="breadcrumb-item active">General</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-12">

                    <div class="card">
                        <div class="card-body">

                            <h5 class="card-title">List produits</h5>


                            <!-- Default Table -->
                            <table class="table">
                                <thead>
                                <tr>
                                    <th scope="col">Nom</th>
                                    <th scope="col">Prix</th>

                                    <th scope="col">nom de la categorie</th>
                                    <th scope="col">stock</th>
                                    <th scope="col">image</th>
                                    <th scope="col">Modifier</th>
                                    <th scope="col">Supprimer</th>
                                    <th scope="col">Detail</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>
                                        {% if listP | length == 0 %}

                                            <p style="text-align: center">Produits vides</p>

                                        {% endif %}

                                    </td>
                                </tr>
                                {% for p in listP  %}

                                    <tr>

                                        <td>{{p.nomP}}</td>
                                        <td>{{p.prixP}}</td>

                                        <td> {{ p.idcatP.nomC }}</td>
                                        <td>{{ p.stock }}</td>

                                        <td><img  style="width: 75px; height: 55px; padding: 5px;" src="{{ asset('uploads/'~p.imageP) }}"/></td>
                                        <td><a href="{{ path('modifierProduit',{id:p.id}) }}">
                                                <button type="button" class="btn btn-outline-success">Modifier</button>
                                            </a></td>

                                        <td><a href="{{ path('suppressionProduit',{id:p.id}) }}">
                                                <button type="button" class="btn btn-outline-danger">Supprimer</button>
                                            </a></td>

                                        <td><a href="{{ path('detail',{id:p.id}) }}">
                                                <button type="button" class="btn btn-outline-dark">detail</button>
                                            </a></td>

                                    </tr>

                                {% endfor %}


                                </tbody>
                                <td><a href="{{ path('ajouterProduit') }}">
                                        <button type="button" class="btn btn-primary">ajouter produit</button>
                                    </a></td>
                            </table>
                            <!-- End Default Table Example -->
                            <a href="{{ path('exportexcel') }}">Exporter vers Excel</a>
                        </div>
                    </div>



                </div>


            </div>
        </section>

    </main>

{% endblock %}
