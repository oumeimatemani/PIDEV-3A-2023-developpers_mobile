{% extends 'base.html.twig' %}

{% block title %}liste des Categorie {% endblock %}

{% block body %}

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Les Categorie </h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Tables</li>
                    <li class="breadcrumb-item active">General</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-12">

                    <div class="card">
                        <div class="card-body">

                            <h5 class="card-title">List Categorie</h5>


                            <!-- Default Table -->
                            <table class="table">
                                <thead>
                                <tr>
                                    <th scope="col">Nom</th>
                                    <th scope="col">description</th>
                                    <th scope="col">date de creation </th>
                                    <th scope="col">Modifier</th>
                                    <th scope="col">Supprimer</th>

                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>
                                        {% if listC | length == 0 %}

                                            <p style="text-align: center">Categories vides</p>

                                        {% endif %}

                                    </td>
                                </tr>
                                {% for C in listC  %}

                                    <tr>

                                        <td>{{C.nomC}}</td>
                                        <td>{{C.descriptionCat}}</td>
                                        <td>{{ C.dateCreation ? C.dateCreation|date('Y-m-d ') : '' }}</td>


                                        <td><a href="{{ path('modifierCategorie',{id:C.id}) }}">
                                                <button type="button" class="btn btn-outline-success">Modifier</button>
                                            </a></td>

                                        <td><a href="{{ path('supprimeCategorie',{id:C.id}) }}">
                                                <button type="button" class="btn btn-outline-danger">Supprimer</button>
                                            </a></td>

                                    </tr>

                                {% endfor %}


                                </tbody>
                                <td><a href="{{ path('ajouterCategorie') }}">
                                        <button type="button" class="btn btn-primary">ajouter categorie</button>
                                    </a></td>
                            </table>
                            <!-- End Default Table Example -->
                        </div>
                    </div>



                </div>


            </div>
        </section>

    </main>

{% endblock %}
